<%= form_for(@category) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :ca_name %><br>
    <%= f.text_field :ca_name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :es_name %><br>
    <%= f.text_field :es_name, class:'form-control' %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>