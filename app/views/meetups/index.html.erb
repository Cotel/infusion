<% if user_signed_in? %>
  <%= link_to new_meetup_path, class:'btn btn-primary right' do
    I18n.t 'meetup.host_yours'
  end %>
<% else %>
  <%= link_to new_user_registration_path, class:'btn btn-primary right' do
    I18n.t 'meetup.host_yours'
  end %>
<% end %>

<h1>Meetups</h1>
<br/>
<div class="card next-meetup-card">
  <div class="card-header">
    <h2><%= I18n.t 'meetup.next' %>
      <% if @next_meetup %>
        <br/>üìç <%= @next_meetup.location.name %> | üìÖ <%= I18n.l @next_meetup.date %> | ‚è∞ <%= @next_meetup.start.strftime('%H:%M') %> - <%= @next_meetup.end.strftime('%H:%M') %>
      <% end %>
    </h2>
  </div>
  <% if @next_meetup.nil? %>
    <div class="card-body">
      <h3 class="center">
        <%= I18n.t 'meetup.no_next'%>
      </h3>
    </div>
  <% else %>
   <div class="card-body">
      <h2>
        <span class="badge badge-info badge-pill">
          <%= I18n.t 'meetup.assistants', count: @next_meetup.assistances.count %>
        </span>
        <%= link_to @next_meetup.title, @next_meetup %>
      </h2>
      <p><%= truncate(strip_tags(@markdown.render(@next_meetup.description)), length: 200) %></p>
    </div>
    <div class="card-footer text-muted">
      <%= link_to @next_meetup.holdings.first.user.username, "/#{@next_meetup.holdings.first.user.username}" %> | <%= time_ago_in_words(@next_meetup.created_at) %>
    </div>
  <% end %>
</div>
<br/><br/>
<div class="row">
  <div class="col-md-6 left">
    <h2><%= I18n.t 'meetup.recents' %></h2>
    <% @most_recent.each do |meetup| %>
      <%= render 'meetups/card', meetup: meetup, context: 'recent' %>
    <% end %>
  </div>
  <div class="col-md-6 right">
    <h2><%= I18n.t 'meetup.populars' %></h2>
    <% @most_popular.each do |meetup| %>
      <%= render 'meetups/card', meetup: meetup, context: 'popular' %>
    <% end %>
  </div>
</div>