<%= form_for(@location) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active, class:'form-control' %>
  </div>

  <br/>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
